<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/fullscreen">

        <ScrollView
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:id="@+id/zonedrop1"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_des_taches1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:background="@color/blanc"
                    android:text="To-do"/>

            </LinearLayout>

        </ScrollView>

        <ScrollView
            android:id="@+id/zonedrop2"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent">

            <LinearLayout
                android:id="@+id/list_des_taches2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/blanc"
                    android:gravity="center"
                    android:text="In progress"
                    android:textAlignment="center"
                    android:textSize="40sp" />

            </LinearLayout>

        </ScrollView>

        <ScrollView
            android:id="@+id/zonedrop3"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:background="@color/color3">

            <LinearLayout
                android:id="@+id/list_des_taches3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:background="@color/blanc"
                    android:text="Done"
                    android:textAlignment="center"
                    android:textSize="40sp" />

            </LinearLayout>

        </ScrollView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/personnage"
            android:background="@color/blanc">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_des_perso"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:baselineAligned="false">


                <ImageView
                    android:id="@+id/picutilisateur1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/helene"
                    android:tag="utilisateur1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nomutilisateur1"
                    android:text="test"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/picutilisateur2"
                    android:layout_margin="2dp"
                    android:tag="utilisateur2"
                    android:src="@drawable/helios"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nomutilisateur2"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/picutilisateur3"
                    android:layout_margin="2dp"
                    android:tag="utilisateur3"
                    android:src="@drawable/hermes"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nomutilisateur3"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/picutilisateur4"
                    android:layout_margin="2dp"
                    android:tag="utilisateur4"
                    android:src="@drawable/poseidon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nomutilisateur4"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/picutilisateur5"
                    android:layout_margin="2dp"
                    android:tag="utilisateur5"
                    android:src="@drawable/pan"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nomutilisateur5"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/picutilisateur6"
                    android:layout_margin="2dp"
                    android:tag="utilisateur6"
                    android:src="@drawable/midas"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nomutilisateur6"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/IVvertRema"
                    android:tag="vertR"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:background="@color/vertremaining"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/IVbleuRema"
                    android:tag="bleuR"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="@color/bleuremaining"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/IVjauneRema"
                    android:tag="jauneR"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="@color/jauneremaining"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/IVrougeRema"
                    android:tag="rougeR"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@color/rougeremaining"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/blanc">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:id="@+id/progressbarParole"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch user"
            android:onClick="reinitilisationTimer"/>

    </LinearLayout>

</LinearLayout>